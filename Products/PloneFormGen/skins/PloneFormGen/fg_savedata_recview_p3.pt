<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>

<div metal:fill-slot="main">
    <tal:main-macro metal:define-macro="main"
           tal:define="colnames here/getColumnNames;
                       canEdit python:checkPermission('Modify portal content', here);
                       results here/getSavedFormInput;
                       Batch python:modules['Products.CMFPlone'].Batch;
                       b_size python:10;
                       b_start python:0;
                       b_start request/b_start | b_start;">
        
        <tal:block condition="exists: request/clearSavedFormInput">
          <span tal:define="dummy here/clearSavedFormInput" />
        </tal:block>

        <div tal:replace="structure provider:plone.abovecontenttitle" />
        
        <h1 tal:content="object_title" class="documentFirstHeading">
            Title or id
        </h1>
        
        <div tal:replace="structure provider:plone.belowcontenttitle" />
        
        <p class="documentDescription"
           tal:content="here/Description"
           tal:condition="here/Description">
            Description
        </p>
        
        <div tal:replace="structure provider:plone.abovecontentbody" />
        
        <div
         tal:condition="results" 
         tal:define="batch python:Batch(results, b_size, int(b_start), orphan=1);">
        
            <tal:block tal:condition="batch/prevlist">
                <div metal:use-macro="here/batch_macros/macros/navigation" />
            </tal:block>

            <dl tal:repeat="row batch" class="comment">
                <tal:block
                 tal:repeat="cname colnames"
                 tal:define="rowdict python:here.rowAsColDict(row, colnames)">
                 
                    <dt tal:content="cname">column name</dt>
                    <dd tal:content="python: rowdict.get(cname, '')">data</dd>
                    
                </tal:block>
            </dl>

            <tal:block tal:condition="batch/nextlist">
                <div metal:use-macro="here/batch_macros/macros/navigation" />
            </tal:block>
        </div>
        
        <form action="#"
           method="post"
           tal:condition="canEdit"
           tal:attributes="action here/absolute_url"
           style="padding-top:2em">
            <input type="submit" name="clearSavedFormInput" value="Clear Saved Input"  class="standalone"
              i18n:attributes="value clear-save-input" i18n:domain="ploneformgen"
              />
        </form>
        
        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</div>

</body>

</html>
